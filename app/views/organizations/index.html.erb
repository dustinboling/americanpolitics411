<div class="container">	
	<h1>Listing organizations</h1>

	<table>
	  <tr>
	    <th>Name</th>
	    <th></th>
	    <th></th>
	    <th></th>
	  </tr>

	<% @organizations.each do |organization| %>
	  <tr>
	    <td><%= organization.name %></td>
	    <td><%= link_to 'Show', organization, :class => 'btn small success' %></td>
	    <td><%= link_to 'Edit', edit_organization_path(organization), :class => 'btn small primary' %></td>
	    <td><%= link_to 'Destroy', organization, confirm: 'Are you sure?', method: :delete, :class => 'btn small danger' %></td>
	  </tr>
	<% end %>
	</table>

	<br />

	<%= link_to 'Add Organization', new_organization_path, :class => 'btn success' %>
</div>