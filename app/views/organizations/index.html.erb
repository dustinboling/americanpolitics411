<div class="content-wrap sixteen columns">	
	
	<%= render 'layouts/messages' %>
	
	<h1 class="page-title">Manage organizations</h1>

	<table>
	  <tr>
	    <th>Name</th>
	    <th></th>
	    <th></th>
	    <th></th>
	  </tr>

	<% @organizations.each do |organization| %>
	  <tr>
	    <td><%= organization.name %></td>
	    <td><%= link_to 'Show', organization, :class => 'btn small success' %></td>
	    <td><%= link_to 'Edit', edit_organization_path(organization), :class => 'btn small primary' %></td>
	    <td></td>
	  </tr>
	<% end %>
	</table>

	<br />

	<%= link_to 'Add Organization', new_organization_path, :class => 'btn success' %>
</div>
