<div class="content-wrap sixteen columns">	
  <%= render 'layouts/messages' %>
  <h1 class="page-title">Manage organizations</h1>
  <table class="table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Show</th>
        <th>Edit</th>
      </tr>
    </thead>
    <tbody>
      <% @organizations.each do |organization| %>
      <tr class="<%= cycle('even', 'odd') %>">
        <td><%= link_to organization.name, organization %></td>
        <td><%= link_to 'Show', organization %></td>
        <td><%= link_to 'Edit', edit_organization_path(organization) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Add Organization', new_organization_path, :class => 'button' %>
</div>
