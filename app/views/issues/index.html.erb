<div class="content-wrap sixteen columns">
  <h1 class="page-title">Manage Issues</h1>

  <table class="table-striped">
    <tr>
      <th class="span10">Name</th>
      <th>Assigned To</th>
      <th></th>
    </tr>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= link_to "#{issue.name}", issue %></td>
        <td><%= issue.main_issues.collect { |mi| mi.name }.to_sentence %></td>
        <% if can? :edit, Issue %>
          <td><%= link_to "Edit", edit_issue_path(issue), :class => "btn small success" %></td>
        <% else %>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </table>
</div>
