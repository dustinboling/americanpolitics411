<%= form_for(@user) do |f| %>
<%= error_messages_for(@user) %>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>
	<div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
	<div class="field">
		<%= f.label :roles %><br />
    <% for role in User::ROLES %>
      <%= check_box_tag "user[roles][]", role, @user.roles.include?(role) %>
      <%=h role.humanize %><br />
    <% end %>
    <%= hidden_field_tag "user[roles][]", "" %>
	</div>
	<div class="actions">
    <%= f.submit %>
  </div>
<% end %>