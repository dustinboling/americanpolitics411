<div class="content-wrap sixteen columns">
	
	<%= render 'layouts/messages' %>
	
	<h1 class="page-title">Manage universities</h1>

	<table>
	  <tr>
	    <th>Name</th>
	    <th></th>
	    <th></th>
	    <th></th>
	  </tr>

	<% @universities.each do |university| %>
	  <tr>
	    <td><%= university.name %></td>
	    <td><%= link_to 'Show', university, :class => 'btn small success' %></td>
	    <td><%= link_to 'Edit', edit_university_path(university), :class => 'btn small primary' %></td>
	    <td><%= link_to 'Destroy', university, confirm: 'Are you sure?', method: :delete, :class => 'btn small danger' %></td>
	  </tr>
	<% end %>
	</table>
	
	<%= link_to 'New University', new_university_path, :class => 'btn success' %>
</div>
