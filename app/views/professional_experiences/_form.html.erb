<%= form_for(@professional_experience) do |f| %>
  <% if @professional_experience.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@professional_experience.errors.count, "error") %> prohibited this position from being saved:</h2>

      <ul>
      <% @professional_experience.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :person_id %><br />
    <%= f.select(:person_id, options_for_select(@people.collect {|u| [u.last_name + ", " + u.first_name, u.id]}, @person.id))%>
  </div>
  <div class="field">
    <%= f.label :organization %><br />
    <%= f.select(:organization_id, @organizations.collect {|t| [t.name, t.id]}, :include_blank => true, :selected => nil) %>
  </div>
  <div class="field">
    <%= f.label :position %><br />
    <%= f.text_field :position %>
  </div>
  <div class="field">
    <%= f.label :date_started, "Year Started" %><br />
    <%= f.date_select(:date_started, :start_year => 1951, :discard_day => true, :discard_month => true) %>
  </div>
  <div class="field">
    <%= f.label :date_ended, "Year Ended" %><br />
    <%= f.date_select(:date_ended, :start_year => 1951, :discard_day => true, :discard_month => true) %>
  </div>
  <div class="field">
    <%= f.label :accomplishments %><br />
    <%= f.text_area :accomplishments %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
