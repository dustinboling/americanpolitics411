<%= form_for(@transaction) do |f| %>
  <% if @transaction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
      <% @transaction.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :organization %><br />
    <%= f.select(:organization_id, @organizations.collect {|t| [t.name, t.id]}, :prompt => :true) %>
  </div>
  <div class="field">
    <%= f.label :person_id %><br />
    <%= f.select(:person_id, options_for_select(@people.collect {|u| [u.last_name + ", " + u.first_name, u.id]}, @person.id))%>
  </div>
  <div class="field">
    <%= f.label :date, "Year" %><br />
    <%= f.date_select(:date, :start_year => 1951) %>
  </div>
	<div class="field">
    <%= f.label :value %><br />
    <%= f.text_field :value %>
  </div>
	<div class="field radio">
    <%= f.label :action, 'Sold' %>
    <%= f.radio_button :action, "0" %>
    <%= f.label :action, 'Purchased' %>
		<%= f.radio_button :action, "1" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>