<h1>Listing supporters</h1>

<table>
  <tr>
    <th>Group name</th>
    <th>Support percentage</th>
    <th>Person</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @supporters.each do |supporter| %>
  <tr>
    <td><%= supporter.group_name %></td>
    <td><%= supporter.support_percentage %></td>
    <td><%= supporter.person_id %></td>
    <td><%= link_to 'Show', supporter %></td>
    <td><%= link_to 'Edit', edit_supporter_path(supporter) %></td>
    <td><%= link_to 'Destroy', supporter, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

