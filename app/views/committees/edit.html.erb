<style type="text/css">
  input, textarea, select, .uneditable-input {
    border: 1px solid #CCCCCC;
    border-radius: 3px 3px 3px 3px;
    color: gray;
    display: inline-block;
    font-size: 13px;
    line-height: 18px;
    margin-bottom: 20px;
    padding: 4px;
    width: 940px;
  }
</style>

<div class="container">
  <%= form_for(@committee, :html => { :class => 'form-stacked' }) do |f| %>
    <h1>Editing <%= @committee.name %></h1>

    <%= error_messages_for(@committee) %>

    <%= f.label :about %>
    <%= f.text_area :about, :rows => 10 %>

    <%= f.label :jurisdiction %>
    <%= f.text_area :jurisdiction, :rows => 10 %>

    <%= f.submit %>

  <% end %>
</div>
