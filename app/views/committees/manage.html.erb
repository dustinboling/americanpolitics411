<div class="content-wrap sixteen columns">
  <h1 class="page-title">Manage Committees</h1>
  <table class="table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>About</th>
        <th>Jurisdiction</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @committees.each do |committee| %>
      <tr class="<%= cycle('even', 'odd') %>">
        <td><%= link_to "#{committee.name}", committee %></td>
        <% if committee.about.nil? || committee.about.empty? %>
        <td><%= image_tag('cancel.png', :style => "width: 20px; height: 20px;") %></td>
        <% else %>
        <td><%= image_tag('check.png', :style => "width: 20px; height: 20px;") %></td>
        <% end %>
        <% if committee.jurisdiction.nil? || committee.jurisdiction.empty? %>
        <td><%= image_tag('cancel.png', :style => "width: 20px; height: 20px;") %></td>
        <% else %>
        <td><%= image_tag('check.png', :style => "width: 20px; height: 20px;") %></td>
        <% end %>
        <td><%= link_to "Edit", edit_committee_path(committee) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
