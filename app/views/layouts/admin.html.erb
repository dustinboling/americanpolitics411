<!DOCTYPE html>
<html lang="en">
<head>
  <title>American Politics 411 | <%= @page_title %></title>
  <%= stylesheet_link_tag    "application" %>
	<%= stylesheet_link_tag    "public" %>
  <%= javascript_include_tag "application" %>
	<%= javascript_include_tag "person" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<!-- TOPBAR
		========================   -->
	<div class="topbar">
	     <div class="topbar-inner">
	       <div class="container-fluid">
	         <a class="brand" href="/">American Politics 411</a>

	         <ul class="nav" data-dropdown="dropdown">
	           <li class="active"><%= link_to 'Home', root_url %></li>
	           <li class="dropdown">
							<a href="/" class="dropdown-toggle">Add</a>
								<ul class="dropdown-menu">
									<li><%= link_to 'Create New Person', new_person_path %></li>
									<li><%= link_to('Add Organization', { :controller => 'organizations', :action => 'new' }) %></li>
									<li><%= link_to('Add University', { :controller => 'universities', :action => 'new' }) %></li>
									<li><%= link_to('Add Religion', { :controller => 'religions', :action => 'new' }) %></li>
								</ul>
							</li>
	           <li class="dropdown">
							<a href="/" class="dropdown-toggle">Users</a>
								<ul class="dropdown-menu">
									<li><%= link_to "Add New User", signup_path %></li>
									<li><%= link_to "Manage Users", users_path %></li>
								</ul>
							</li>
	         </ul>

					<p class="user-nav pull-right">
						<% if current_user %>
							Logged in as <%= current_user.username %>
							<%= link_to "log out", logout_path %>
						<% else %>
							<%= link_to "log in", login_path %>
						<% end %>
					</p>
	       </div>
	     </div>
	   </div>
	
	<!-- BODY
	======================= -->
	<%= yield %>

</body>
</html>