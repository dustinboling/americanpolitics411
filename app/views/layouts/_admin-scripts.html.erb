<%= stylesheet_link_tag 'twitter/bootstrap' %>
<%= stylesheet_link_tag 'jquery.wysiwyg.css' %>
<%= javascript_include_tag 'jquery.wysiwyg.js' %>
<%= javascript_include_tag 'controls/wysiwyg.image.js' %>
<%= javascript_include_tag 'controls/wysiwyg.link.js' %>
<%= javascript_include_tag 'controls/wysiwyg.table.js' %>
<script type="text/javascript">
  (function($) {
    $(document).ready(function() {
      $('.wysiwyg').wysiwyg({
        initialContent: "",
        iFrameClass: "full-width",
        controls: {
          strikeThrough: {visible: false},
          subscript: {visible: false},
          superscript: {visible: false},
          indent: {visible: false},
          outdent: {visible: false},
          h1: {visible: false},
          h2: {visible: false},
          h3: {visible: false},
          justifyLeft: {visible: false},
          justifyRight: {visible: false},
          justifyCenter: {visible: false},
          justifyFull: {visible: false},
          removeFormat: {visible: false},
          insertImage: {visible: false},
          code: {visible: false},
          undo: {visible: false},
          redo: {visible: false}
        }
      });
    });
  })(jQuery);
</script>
