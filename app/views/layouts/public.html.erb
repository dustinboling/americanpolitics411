<!doctype html>
<html lang="en">
  <head>
    <title>american politics 411 | <%= @page_title %></title>
    <%= stylesheet_link_tag    'base', 'skeleton', 'layout', 'style', 'person', 'committees', 'application', 'public' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <script type='text/javascript'>
      (function (d, t) {
        var bh = d.createelement(t), s = d.getelementsbytagname(t)[0];
        bh.type = 'text/javascript';
        bh.src = '//www.bugherd.com/sidebarv2.js?apikey=qogjodg5aecdllg1wxzshg';
        s.parentnode.insertbefore(bh, s);
      })(document, 'script');
    </script> 
  </head>
  <body>
    <!-- topbar -->
    <% if current_user %>
    <%= render 'layouts/admin-scripts' %>
    <%= render 'layouts/topbar' %>
    <% end %>

    <!-- HEADER -->
    <header id="header" class="container">
      <div class="one-third column">
        &nbsp;
        <div id="social-media-buttons-header">
          <ul>
            <li>
              <a href="https://www.youtube.com/user/americanpoliticsinfo/featured" id="yt-link-top"></a>
            </li>
            <li>
              <a href="http://www.facebook.com/AP411" id="facebook-link-top"></a>
            </li>
            <li>
              <a href="https://twitter.com/AP_411" id="twitter-link-top"></a>
            </li>
            <li>
              <a href="http://www.americanpolitics411.com/article/feed" id="rss-link-top"></a>
            </li>
          </ul>
        </div>
        <div id="time-now"><%= Time.now.to_date.strftime("%e %B %Y") %></div>
      </div>
      <div class="one-third column logo">
        <a href="/" ><img src="/assets/ap411-logo.png"></a>
      </div>
      <div class="one-third column">
        <% unless current_user %>
        <%= link_to "Log In", new_session_path, :style => 'float: right;' %>
        <% end %> 
      </div>
    </header>

    <!-- NAVIGATION -->
    <div id="content-wrap" class="container clearfix">
      <nav id="header-nav" class="sixteen columns clearfix">
        <ul id="menu-header" class="menu clearfix">
          <li id="menu-item-news"><a href="http://www.americanpolitics411.com/news/">News</a></li>
          <li id="menu-item-research" class="menu-item"><a href="/">Research</a></li>
          <li id="menu-item-events" class="menu-item"><a href="http://www.americanpolitics411.com/events/">Events</a></li>
          <li id="menu-item-officials" class="menu-item"><a href="/people/representatives">Officials</a></li>
          <li id="menu-item-legislation" class="menu-item"><a href="/legislation">Legislation</a></li>
          <li id="menu-item-pundit-cafe" class="menu-item"><a href="http://www.americanpolitics411.com/pundit-cafe/">The Pundit Cafe</a></li>
          <li id="menu-item-internships" class="menu-item"><a href="http://www.americanpolitics411.com/internships/">Internships</a></li>
        </ul>
      </nav>
      <!-- BODY -->
      <%= yield %>

      <hr class="sixteen columns">
    </div>

    <!-- FOOTER -->
    <footer id="footer" class="container clearfix">
      <nav id="footer-nav" class="twelve columns alpha">
        <ul id="menu-footer" class="menu clearfix"><li class="menu-item"><a href="http://www.americanpolitics411.com/news/">News</a></li>
          <li id="menu-item-research" class="menu-item"><a href="/">Research</a></li>
          <li id="menu-item" class="menu-item"><a href="http://www.americanpolitics411.com/events/">Events</a></li>
          <li id="menu-item" class="menu-item"><a href="/people/representatives">Officials</a></li>
          <li id="menu-item" class="menu-item"><a href="/legislation">Legislation</a></li>
          <li id="menu-item" class="menu-item"><a href="http://www.americanpolitics411.com/pundit-cafe/">The Pundit Cafe</a></li>
        </ul>   
      </nav>

      <div class="four columns omega">
        <p class="copyright">Copyright 2012 American Politics 411</p>
      </div>
      <div class="four columns omega">
        &nbsp;
        <div id="social-media-buttons-footer">
          <ul>
            <li>
              <a href="https://www.youtube.com/user/americanpoliticsinfo/featured" id="yt-link-bottom"></a>
            </li>
            <li>
              <a href="http://www.facebook.com/AP411" id="facebook-link-bottom"></a>
            </li>
            <li>
              <a href="https://twitter.com/AP_411" id="twitter-link-bottom"></a>
            </li>
            <li>
              <a href="http://www.americanpolitics411.com/article/feed" id="rss-link-bottom"></a>
            </li>
          </ul>
        </div>
      </div>
    </footer>
  </body>
</html>
