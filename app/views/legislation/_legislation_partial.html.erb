<%= stylesheet_link_tag "legislation" %>
<% if @legislation.count == 0 %>
<h2>No records found.</h2>
<% else %>
<table id="legislation-table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Bill No.</th>
      <th>Bill Title</th>
      <th>Outcome</th>
      <% if can? :edit, Legislation %>
      <th>Edit</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @legislation.each do |legislation| %>
    <tr class="<%= cycle("even", "odd") %>">
      <td><%= link_to legislation.introduced_date, legislation %></td>
      <td class="span3"><%= link_to "#{legislation.bill_number}", legislation %></td>
      <td><%= link_to truncate(legislation.bill_title, :length => 80), legislation %></td>
      <td></td>
      <% if can? :edit, Legislation %>
      <td><%= link_to "Edit", edit_legislation_path(legislation), :class => 'btn small success' %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>
