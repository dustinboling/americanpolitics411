<div class="sixteen columns">
  <div class="four columns">
    <h1 class="page-title">Legislation</h1>
  </div>
  <div class="three columns">
    <%= form_for :legislations, :remote => true, :url => {:action => 'refresh'} do |f| %>
    <label class="two columns">
      By Year
      <%= f.select :introduced_year, Legislation::YEARS, {}, :class => 'box_g', :style => 'width: 90px;' %>
    </label>
    <%= f.submit "Go", :class => 'no-padding box_red' %>
    <% end %>
  </div>
  <div class="four columns">
    <%= form_for :legislations, :remote => true, :url => {:action => 'refresh'} do |f| %>
    <label class="three columns">
      By Session
      <%= f.select :session, Legislation::SESSIONS, {}, :class => 'box_g', :style => "height: 30px;" %>
    </label>
    <%= f.submit "Go", :class => 'no-padding box_red' %>
    <% end %>
  </div>
  <div class="four columns">
    <%= form_for :legislations, :remote => true, :url => {:action => 'refresh'} do |f| %>
    <label class="three columns">
      By Issue
      <%= f.text_field :issue_name, :class => 'issues-list box_g', :data => {issues_source: api_autocomplete_autocomplete_issues_name_path}, :style => 'width: 150px;' %>
    </label>
    <%= f.submit "Go", :class => 'no-padding box_red' %>
    <% end %>
  </div>
</div>

<div id="legislation-container" class="fifteen columns box_a" style="margin-left: 20px;">
  <div id="legislation">
    <%= render :partial => 'legislation_partial', :locals => { :legislation => @legislation } %>
  </div>
  <div id="paginator">
    <%= render :partial => 'legislation_pagination_partial', :locals => { :legislation => @legislation } %>
  </div>
</div>
