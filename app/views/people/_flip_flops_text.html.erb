<% p = Person.find(params[:pid]) %>
<% flip_flops = p.flip_flops %>

<h1>Flip-flops</h1>
<table class="table-striped">
  <thead>
    <tr>
      <th>Year</th>
      <th>Issue</th>
      <th>Flip-flop</th>
    </tr>
  </thead>
  <tbody>
    <% flip_flops.each do |f| %>
    <tr>
      <td><%= f.year.year %></td>
      <td><%= f.issue %></td>
      <td><%= f.flipflop %></td>
    </tr>
    <% end %>
  </tbody>
</table>
