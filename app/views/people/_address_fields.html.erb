<tr class="fields">
  <%= f.hidden_field :person_id, :value => @person.id %>

  <td><%= f.text_field :title, :style => 'width: 100px; height: 15px;' %></td>
  <td><%= f.text_field :street_address, :style => 'height: 15px;' %></td>
  <td><%= f.text_field :city, :style => 'width: 100px; height: 15px;' %></td>
  <td><%= f.text_field :state, :style => 'width: 50px; height: 15px;' %></td>
  <td><%= f.text_field :zip_code, :style => 'width: 60px; height: 15px;' %></td>
  <td><%= f.text_field :phone, :style => 'width: 80px; height: 15px;' %></td>
  <td><%= f.text_field :fax, :style => 'width: 80px; height: 15px;' %></td>
  <td><%= link_to_remove_fields "remove", f %></td>
</tr>
