<tr class="fields actions">
	<%= f.hidden_field :person_id, :value => @person.id %>

 		<td><%= f.text_field :organization_name, :class => 'organization-list', data: {organizations_source: organizations_autocomplete_organization_name_path} %></td>
    <td><%= f.date_select :year, {:start_year => 1951, :discard_day => true, :discard_month => true}, {:class => 'span2'} %></td>
		<td><%= f.text_area :description, :rows => 3 %></td>
    <td><%= f.text_field :sector, :class => 'span4' %></td>
    <td><%= f.text_field :amount, :class => 'span4' %></td>
		<td>
			<span class="label important">
				<%= link_to_remove_fields "remove", f %>
			</span>
		</td>
</tr>