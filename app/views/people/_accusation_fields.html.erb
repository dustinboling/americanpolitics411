<div class="fields actions">
	<%= f.hidden_field :person_id, :value => @person.id %>
	<p>
    <%= f.label :date, "Year" %>
    <%= f.date_select(:date, :start_year => 1951) %>
  </p>
	<p>
    <%= f.label :accusation %>
    <%= f.text_area :accusation, :rows => 3 %>
  </p>
	<p>
    <%= f.label :outcome %>
    <%= f.text_area :outcome, :rows => 3 %>
  </p>
	<span class="label important">
		<%= link_to_remove_fields "remove accusation", f %>
	</span>
</div>