<div class="container">
	<div class="page-header">
		<%= render 'messages' %>

		<h3>All People</h3>
			<table class="zebra-striped span6">
				<tr>
					<th>Person</th>
					<% if can? :edit, Person %>
						<th>Actions<th>
					<% end %>			
				</tr>
				<% @people.each do |person| %>
				<tr>
					<td><a href="<%= person_path(person) %>"><%= person.first_name + " " + person.last_name %></a></td>
					<% if can? :edit, Person %>
						<td>
							<span class="label warning"><a href ="<%= edit_person_path(person) %>">edit</a></span>
						<td><br />
					<% end %>
				</tr>
			<% end %>
		</table>
	</div>