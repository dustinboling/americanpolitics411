<h2>Family Members</h2>

<table class="zebra-striped">
  <tr>
    <th>Related to</th>
    <th>Relationship</th>
    <th>Notes</th>
    <th></th>
  </tr>
  <%= f.fields_for(:family_members, @person.family_members) do |family_member| %>
  <%= render 'family_member_fields', :f => family_member %>
  <% end %>
  <% if @person.family_members.count == 0 %>
  <tr>
    <td>
      No family members have been added.
    </td>
    <td></td>
    <td></td>
    <td></td>
  </tr>
  <% end %>
  <tr class="addfield">
    <td>
      <%= link_to_add_fields "Add New Family Member", f, :family_members %>
    </td>
    <td></td>
    <td></td>
    <td></td>
  </tr>
</table>

