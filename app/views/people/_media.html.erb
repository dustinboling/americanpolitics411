<% if @person.youtube_id.blank? %>
  <% @personal_videos = $youtube.videos_by(:query => "#{@person.full_name}", :page => 1, :per_page => 15) %>
  <% @personal_videos.videos.each do |v| %>
      <% title = v.title %>
      <% thumbnail = v.thumbnails.first.url %>
      <% video_url = v.media_content[0].url %>
      <%= link_to image_tag(thumbnail), video_url %>
    </iframe>
  <% end %>
  <br>
  <%= link_to "More Videos >>", :action => 'videos', :id => @person.id %>
  <p style="font-size:11px;">* These videos are <b>not</b> from the official youtube account of <%= @person.first_name %> <%= @person.last_name %>.</p>
<% else %>
  <% begin %>
    <% @personal_videos = $youtube.videos_by(:user => "#{@person.youtube_id}", :page => 1, :per_page => 15) %>
  <% rescue %>
  <% else %>
    <% @personal_videos.videos.each do |v| %>
      <% title = v.title %>
      <% thumbnail = v.thumbnails.first.url %>
      <% video_url = v.media_content[0].url %>
      <%= link_to image_tag(thumbnail), video_url %>
    <% end %>
    <%= link_to "More Videos >>", videos_person_path(@person), :id => @person.id %>
  <% end %>
<% end %>
