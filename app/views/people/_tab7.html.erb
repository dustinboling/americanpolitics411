<h2 class="edit-title">Accusations</h2>

<table class="zebra-striped">
  <tr>
    <th>Year</th>
    <th>Accusation</th>
    <th>Outcome</th>
    <th></th>
  </tr>
  <%= f.fields_for :accusations do |accusation| %>
  <%= render 'accusation_fields', :f => accusation %>
  <% end %>
  <% if @person.accusations.count == 0 %>
    <tr>
      <td>
        No accusations have been added.
      </td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
  <% end %>
  <tr>
    <td>
      <%= link_to_add_fields "Add Accusation", f, :accusations %>
    </td>
    <td></td>
    <td></td>
    <td></td>
  </tr>
</table>

