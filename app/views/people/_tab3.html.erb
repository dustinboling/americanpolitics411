<h3 class="bump-left">Family Members</h3>
	<table class="zebra-striped">
		<tr>
			<th>Related to</th>
			<th>Relationship</th>
			<th>Notes</th>
			<th></th>
		</tr>
	  <%= f.fields_for(:family_members, @person.family_members) do |family_member| %>
			<%= render 'family_member_fields', :f => family_member %>
	  <% end %>
		<tr class="addfield">
			<td>
				<span class="label success"><%= link_to_add_fields "Add New Family Member", f, :family_members %></span>
			</td>
		</tr>
	</table>

<h3 class="bump-left">Business Associates</h3>
