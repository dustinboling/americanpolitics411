<% p = Person.find(params[:pid]) %>
<% votes = p.person_votes.includes(:legislation) %>

<h1 class="popup-title">Voting Behavior</h1>
<% if votes.count > 0 %>
  <p class="attribution">SOURCE: <a href="http://www.sunlightlabs.com/">Sunlight Labs</a></p>
  <table id="data-table" class="table-striped">
    <thead>
      <tr>
        <th>Bill</th>
        <th>Title</th>
        <th>Vote</th>
      </tr>
    </thead>
    <tbody>
      <% votes.each do |v| %>
      <% l = v.legislation %>
      <tr>
        <td><%= l.bill_type.upcase  %> <%= l.bill_number %></td>
        <td><%= truncate(l.bill_title, :length => 110) %></td>
        <td><%= v.vote %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <% json = fetch_votes(p) %>
  <% votes = json['results'][0]['votes'] %>
  <% if votes.count < 1 %>
    <p><%= p.full_name %> has no votes on record.</p>
  <% else %>
    <p class="attribution">SOURCE: <a href="http://www.sunlightlabs.com/">Sunlight Labs</a></p>
    <table id="data-table" class="table-striped">
      <thead>
        <tr>
          <td>Bill</td>
          <td>Title</td>
          <td>Vote</td>
        </tr>
      </thead>
      <tbody>
      <% votes.each do |v| %>
        <% unless v['bill']['number'].nil? %>
          <tr>
            <td><%= v['bill']['number'] %></td>
            <td><%= truncate(v['bill']['title'], :length => 120) %></td>
            <td><%= v['position'] %></td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
  <% end %>
<% end %>
