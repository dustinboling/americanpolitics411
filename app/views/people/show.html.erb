<% @page_title = "Show Person: #{@person.first_name} #{@person.middle_name} #{@person.last_name}" %>

<p id="notice"><%= notice %></p>

<h1>Details For <%= @person.first_name %> <%= @person.last_name %></h1>

<p>
  <b>First name:</b>
  <%= @person.first_name %>
</p>

<p>
  <b>Middle name:</b>
  <%= @person.middle_name %>
</p>

<p>
  <b>Last name:</b>
  <%= @person.last_name %>
</p>

<p>
  <b>Suffix:</b>
  <%= @person.suffix %>
</p>

<p>
  <b>Date of birth:</b>
  <%= @person.date_of_birth %>
</p>

<p>
  <b>Date of death:</b>
  <%= @person.date_of_death %>
</p>

<p>
  <b>Title:</b>
  <%= @person.title %>
</p>

<p>
  <b>Bio:</b>
  <%= @person.bio %>
</p>
<p>
	<b>Education</b><br />
  <%= @person.degrees.collect {|x| x.degree_earned}.to_sentence %><br />
	<%= @person.universities.collect { |y| y.name }.to_sentence %>
	
	
</p>
<p>
	<b>Religion</b>
	<%= @person.religion.name %>
</p>
<p>
	<b>Related To</b>
	<%= @person.family_members.collect { |w| w.name }.to_sentence %>
</p>
<%= link_to 'Edit', edit_person_path(@person) %> |
<%= link_to 'Back to List', people_path %>
