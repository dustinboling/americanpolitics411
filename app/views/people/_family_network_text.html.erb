<% p = Person.find(params[:pid]) %>
<% family_members = p.family_members %>

<h1>Family Network</h1>
<% if family_members.count > 0 %>
<table class="table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Relationship</th>
    </tr>
  </thead>
  <tbody>
    <% family_members.each do |f| %>
    <tr>
      <th><%= f.family_member %></th>
      <th><%= f.relationship %></th>
    </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<p>Research is in progress.</p>
<% end %>
