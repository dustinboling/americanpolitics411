<div class="hero-unit span13">
	<h3>Relationships</h3>
		<p>
			<b>Business Associates:</b>
			<table class="zebra-striped bordered-table span8">
				<tr>
					<th>Name</th>
					<th>Organization</th>
				</tr>
					<% if @person.business_associates.size > 0 %>
						<%= @person.business_associates.collect { |business_associate| 
									"<tr>
										<td>#{business_associate.full_name}</td>
										<td><a href='/organizations/#{business_associate.organization_id}'>#{business_associate.find_organization_name}</a></td>
									</tr>"
									}.to_sentence(@person.no_separator).html_safe %>
					<% else %>
						<%= "Information Not Yet Available. Research in progress." %>
					<% end %>
				</p>
			</table>
		<p>
			<b>Related To:</b>
			<%= @person.family_members.collect { |family_member|
				unless Person.find_by_name(family_member.family_member).nil? 
						"<a href='/people/#{Person.find_by_name(family_member.family_member).id}'>#{family_member.family_member} (#{family_member.relationship})</a> - #{family_member.notes}"
				else
					"#{family_member.family_member} (#{family_member.relationship}) - #{family_member.notes}"		
				end }.to_sentence.html_safe %>
		</p>
</div>