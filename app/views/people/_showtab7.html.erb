<h3>Establishment</h3>
<p>
  <h4>Legislative Offices Held:</h4>
  <table class="table-striped">
    <thead>
      <tr>
        <th>Congress Year</th>
        <th>Chamber</th>
        <th>State</th>
        <th>District</th>
        <th>Party</th>
        <th>Seniority</th>
        <th>Bills Sponsored</th>
        <th>Bills Cosponsored</th>
        <th>Missed Votes (Percent)</th>
        <th>Votes With Party (Percent)</th>
      </tr>						
    </thead>
    <tbody>
      <% @person.legislative_offices.reverse.collect do |po| %>
      <tr>
        <td><%= po.congress_year %></td>
        <td><%= po.chamber %></td>
        <td><%= po.state %></td>
        <td><%= po.district %></td>
        <td><%= po.party %></td>
        <td><%= po.seniority %></td>
        <td><%= po.bills_sponsored %></td>
        <td><%= po.bills_cosponsored %></td>
        <td><%= po.missed_votes_pct %></td>
        <td><%= po.votes_with_party_pct %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</p>
<p>
  <h4>Earmarks:</h4>
  <table class="table-striped">
    <thead>
      <tr>
        <th>Year</th>
        <th>Recipient</th>
        <th>Organization ID</th>
        <th>Description</th>
        <th>Bill</th>
        <th>Amount</th>
      </tr>
    </thead>
    <tbody>
      <% @earmarks_sorted = @person.earmarks.sort { |x, y| x.fiscal_year <=> y.fiscal_year }.reverse %>
      <% @earmarks_sorted.collect do |earmark| %>
      <tr>
        <td><%= earmark.fiscal_year %></td>
        <td><%= earmark.recipient %></td>
        <td><%= earmark.organization_id %></td>
        <td><%= earmark.description %></td>
        <td><%= earmark.bill %></td>
        <td><%= number_to_currency(earmark.final_amount, :precision => 0) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</p>
<p>
  <h4>Supporters:</h4>
  <% unless @person.supporters.empty? %>
  <%= render :partial => 'layouts/supporters_pie' %>
  <div id="holder"></div>	
  <% else %>
  Information is not currently available, research is in progress.
  <% end %>
</p>
<p>
  <h4>Top Contributors (By Sector)</h4>
  <table class="table-striped">
    <thead>
      <tr>
        <th>Name</th>				
        <th>Total Amount</th>
        <th>Percent</th>
      </tr>
    </thead>
    <tbody>
      <% contributions_by_sector_math %>
      <% @sectors.collect do |s| %>
      <tr>
        <td><%= s.name %></td>
        <td><%= number_to_currency(s.amount) %></td>
        <td><%= sprintf("%0.02f", ((s.amount.to_f / @i.to_f)) * 100) %></td>
      </tr>
      <% end %>
      <tr>
        <td><h4>Total:</h4></h4></td>
      <td><h4><%= number_to_currency(@i) %></h4></td>
      <td></td>
    </tbody>
  </table>
</p>
<p>
  <h4>Top Contributors (Individual):</h4>
  <table class="table-striped">
    <thead>
      <tr>
        <th>Contributor</th>
        <th>Contributor State</th>					
        <th>Contribution Date</th>
        <th>Amount</th>
      </tr>
    </thead>
    <tbody>
      <% @individual_contributors.take(10).collect do |c| %>
      <tr>
        <td><%= link_to "#{c.contributor_name.titleize}", :controller => 'contributor', :action => 'show', :contributor_name => c.contributor_name, :entity_type => "I" %></td>
        <td><%= c.contributor_state %>
          <td><%= c.date %></td>
          <td><%= number_to_currency(c.amount) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to "More", :action => 'indiv_contributors', :id => @person.id %>
  </p>
  <p>
    <h4>Top Contributors (PAC):</h4>
    <table class="table-striped">
      <thead>
        <tr>
          <th>Contributor</th>					
          <th>Contribution Date</th>
          <th>Amount</th>
        </tr>
      </thead>
      <tbody>
        <% @pac_contributors.take(10).collect do |c| %>
        <tr>		
          <td><%= link_to "#{c.contributor_name}", :controller => 'contributor', :action => 'show', :contributor_name => c.contributor_name %></td>
          <td><%= c.date %></td>
          <td><%= number_to_currency(c.amount) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to "More", :action => 'pac_contributors', :id => @person.id %>
  </p>
